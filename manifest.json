{
    "manifest_version": 2,
    "name": "Auto Clear History",
    "version": "0.0.1",

    "default_locale": "en",
    "description": "Clears Browser History for the last 24 hours every 12 am",
    "icons": {
        "16": "16-Icon.png",
        "48": "48-Icon.png",
        "128": "128-Icon.png"
    },
    "browser_action": {
    "default_icon": {                    // optional
        "32": "images/icon32.png"            // optional
    },
    "default_title": "View links",      // optional; shown in tooltip
    "default_popup": "popup.html"        // optional
    },
    "background": {
    "scripts": ["background.js"],
    "persistent": false
    },    
    "permissions": [
    "activeTab",
    "alarms",
    "tabs"
    ]
}