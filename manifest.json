{
    "manifest_version": 2,
    "name": "Auto Clear History",
    "version": "0.0.1",
    "description": "Clears Browser History for the last 24 hours every 9am",
    "icons": {
        "16": "16-Icon.png",
        "48": "48-Icon.png",
        "128": "128-Icon.png"
    },
    "browser_action": {
        "default_icon": {                    
            "32": "browser-Icon-later.png"            
        },
        "default_title": "View links",     
        "default_popup": "popup.html"        
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },    
    "permissions": [
    "activeTab",
    "alarms",
    "browsingData",
    "tabs"
    ]
}